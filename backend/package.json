{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Unbiased - Article Analysis Tool",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/api/server.js",
    "start:worker": "node dist/workers/analysisWorker.js",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:api": "nodemon --exec ts-node src/api/server.ts",
    "dev:worker": "nodemon --exec ts-node src/workers/analysisWorker.ts",
    "dev:debug": "LOG_LEVEL=debug concurrently \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:trace": "LOG_LEVEL=trace concurrently \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:quiet": "LOG_LEVEL=error concurrently \"npm run dev:api\" \"npm run dev:worker\"",
    "migrate-article-data": "ts-node src/scripts/migrateArticleData.ts",
    "migrate-article-data:dry-run": "ts-node src/scripts/migrateArticleData.ts --dry-run",
    "test": "vitest run",
    "test:watch": "vitest",
    "tsc": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "article",
    "analysis",
    "bias",
    "factual-claims",
    "perspective"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@google/genai": "^1.11.0",
    "@supabase/supabase-js": "^2.39.7",
    "axios": "^1.6.7",
    "bullmq": "^5.1.1",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "openai": "^4.28.0",
    "sharp": "^0.34.1",
    "socket.io": "^4.7.4",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  }
}
